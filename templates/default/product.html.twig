{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

{% block stylesheets %}
<style>

.productDetail{
    margin-top:90px;
}
    figure {
        width: 25%;
        object-fit: cover;
        height: auto;
    }

    figure img {
        width: 100%;
        height: 100%;
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
    }


</style>

{% endblock %}

<section class="productDetail">
    <h2 class="section_title mb-3">{{ product.name }}</h2>
   {% if product.stock < 2 %} <small>Bientôt épuisé </small>{% endif %}

        <div class="d-flex ">
            <figure><img src="{{ asset('uploads/' ~ product.image) }}" alt=""></figure>
            <div class="card_content">
                <h3>{{product.name}}</h3>
                <h3>{{product.description |striptags}}</h3>
                <p>{{product.price}}</p>
                <button type="button" class="btn_link" onclick="addInCart({{product.id}})"><i class="fa-solid fa-cart-plus"></i> Ajouter</button>
            </div>
        </div>
    </div>

</section>
{% endblock %}

{% block javascripts %}
<script>
    async function addInCart(id) {
        $.ajax({
            method: "POST",
            url: "/cart/" + id,
            async: true,
        })
            .then(response => {

                console.log(response);
            })
            .catch(error => {
                console.log(error);
            })
    }
</script>

{% endblock %}