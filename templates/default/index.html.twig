{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

{% block stylesheets %}
<style>
    .banner {
        position: relative;
    }

    .banner_title {
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: serif;
        text-align: center;
    }
    .banner_title h1{
        font-size: 3.5em;
        text-shadow: #fff 2px 1px;
        margin-bottom: 30px;
    }

    .about{
        padding: 5% 15%;
    }
    
    .newProduct{
        padding: 5% 10%;
    }
    .section_title {
        font-size: 2.5em;
        font-family: serif;
        font-style: italic;
    }

    .about small {
        font-style: italic;
        margin-bottom: 50px;
    }

    .article_container{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .article_card{
        width: 33%;
        min-width: 200px;
        height: 450px;
        position: relative;

    }

    .article_card:before{
       content:'';
       position: absolute;
       width: 100%;
       height: 100%;
       background: #000;
       opacity: 0.3;
       top: 0;
       left: 0;
       z-index: 1;
       transition: all ease-in 0.3s;
    }

    .article_card:hover:before{
       opacity: 0;
       transition: all ease-in 0.3s;
    }

    .article_card img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: 0% 50%;
    }
    .article_card_content{
        width: 100%;
        z-index: 1;
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translateX(-50%);
        color: #fff;
       text-align: center;
       font-family: serif;
    }

    .card_container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .card {
        width: 23%;
        min-width: 200px;
        border-radius: 10px;
        margin: 5px;
    }

    .card_content{
        padding:10px 15px;
    }

    .card figure {
        width: 100%;
        object-fit: cover;
        height: 350px;
    }

    .card figure img {
        width: 100%;
        height: 100%;
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
    }

    .btn_full {
        color: #fff;
        background-color: #000;
        box-shadow: 2px 2px 2px 1px grey;
        text-transform: uppercase;
        border-radius: none !important;
        text-transform: uppercase;
    }

    .btn_link {
        border: none;
        outline: none;
    }

    .btn_link:focus {
        border: none;
        outline: none;
    }
</style>

{% endblock %}

<header class="banner">
    <img src="{{ asset('img/banner.jpg') }}" width="100%" alt="banner">
    <div class="banner_title">
        <h1>{{ 'home.title'|trans()}}</h1>
        <a href="{{ path('app_product_list') }}" class="btn btn-lg btn-dark">{{ 'home.seeProducts'|trans()}}</a>
    </div>

</header>

<section class="about">
    <h2 class="section_title">Karival Shop</h2>
    <small>{{ 'home.about'|trans()}}</small>

    <p>{{ 'home.aboutContent'|trans()}}</p>

</section>

<section class="article_container">
        <div class="article_card">
            <img src="{{ asset('img/article1.jpg') }}" alt="">
            <div class="article_card_content">
                <h4 class="mb-3">Entretenir son cuir chevelu</h4>
                <a class="btn btn-dark px-5">Lire</a>
            </div>
        </div>
        <div class="article_card">
            <img src="{{ asset('img/article2.jpg') }}" alt="">
            <div class="article_card_content">
                <h4 class="mb-3">Salon de beauté</h4>
                <a class="btn btn-dark px-5">Lire</a>
            </div>
        </div>
        <div class="article_card">
            <img src="{{ asset('img/article3.jpg') }}" alt="">
            <div class="article_card_content">
                <h4 class="mb-3">Comment choisir sa perruque</h4>
                <a class="btn btn-dark px-5">Lire</a>
            </div>
        </div>

</section>

<section class="newProduct">
    <h2 class="section_title mb-3">{{ 'home.lastProduct'|trans()}}</h2>

    <div class="card_container">
        {% for p in products %}
        <div class="card">
            <figure><img src="{{ asset('uploads/' ~ p.image) }}" alt=""></figure>
            <div class="card_content">
                <h3>{{p.name}}</h3>
                <p>{{p.price}} €</p>
                <a href="{{path('app_product', {'id':p.id})}}" class="btn btn_full">
                    Consulter
                </a>
                {% if app.user %}
                    {% if p.stock == 0 %}
                        <button type="button" class="btn_link" data-toggle="modal" data-target="#stockModal"><i class="fa-solid fa-cart-plus"></i> Ajouter</button>    
                    {% else %}
                        <button type="button" class="btn_link" onclick="addInCart({{p.id}})"><i class="fa-solid fa-cart-plus"></i> Ajouter</button>
                    {% endif %}
                {% endif %}
            </div>
        </div>
        {% else %}
        <p class="text-center">
            <td colspan="5">Aucun produit</td>
        </p>
        {% endfor %}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="stockModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title text-danger" id="exampleModalLongTitle">En rupture de stock</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p class="text-center"><i class="fa-solid fa-triangle-exclamation fa-2x"></i></p>
            <p class="text-center">Impossible d'ajouter le produit au panier car il n'est plus en stock</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
    </div>

</section>
{% endblock %}

{% block javascripts %}
<script>
    async function addInCart(id) {
        $.ajax({
            method: "POST",
            url: "/cart/" + id,
            async: true,
        })
            .then(response => {

                console.log(response);
            })
            .catch(error => {
                console.log(error);
            })
    }
</script>

{% endblock %}